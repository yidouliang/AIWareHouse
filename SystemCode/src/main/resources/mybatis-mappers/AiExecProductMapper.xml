<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.AiExecProductDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.PRODUCT_CODE != null and params.PRODUCT_CODE != ''">
				and PRODUCT_CODE = #{params.PRODUCTCODE} 
			</if>
			<if test="params.AI_CODE != null and params.AI_CODE != ''">
				and AI_CODE = #{params.AICODE} 
			</if>
			<if test="params.PRODUCT_NAME != null and params.PRODUCT_NAME != ''">
				and PRODUCT_NAME = #{params.PRODUCTNAME} 
			</if>
			<if test="params.PRODUCT_DESC != null and params.PRODUCT_DESC != ''">
				and PRODUCT_DESC = #{params.PRODUCTDESC} 
			</if>
			<if test="params.PRODUCT_TYPE_ID != null and params.PRODUCT_TYPE_ID != ''">
				and PRODUCT_TYPE_ID = #{params.PRODUCTTYPEID} 
			</if>
			<if test="params.PRODUCT_ORI_PRICE != null and params.PRODUCT_ORI_PRICE != ''">
				and PRODUCT_ORI_PRICE = #{params.PRODUCTORIPRICE} 
			</if>
			<if test="params.PRODUCT_STATUS != null and params.PRODUCT_STATUS != ''">
				and PRODUCT_STATUS = #{params.PRODUCTSTATUS} 
			</if>
			<if test="params.PRODUCT_PIC_PATH != null and params.PRODUCT_PIC_PATH != ''">
				and PRODUCT_PIC_PATH = #{params.PRODUCTPICPATH} 
			</if>
			<if test="params.PRODUCT_URL != null and params.PRODUCT_URL != ''">
				and PRODUCT_URL = #{params.PRODUCTURL} 
			</if>
			<if test="params.CREATOR != null and params.CREATOR != ''">
				and CREATOR = #{params.CREATOR} 
			</if>
			<if test="params.CREATE_DATE != null and params.CREATE_DATE != ''">
				and CREATE_DATE = #{params.CREATEDATE} 
			</if>
			<if test="params.MODIFY_DATE != null and params.MODIFY_DATE != ''">
				and MODIFY_DATE = #{params.MODIFYDATE} 
			</if>
			<if test="params.DATA_STATE != null and params.DATA_STATE != ''">
				and DATA_STATE = #{params.DATASTATE} 
			</if>
			<if test="params.PRODUCT_SOURCE != null and params.PRODUCT_SOURCE != ''">
				and PRODUCT_SOURCE = #{params.PRODUCTSOURCE} 
			</if>
			<if test="params.EXT1 != null and params.EXT1 != ''">
				and EXT1 = #{params.EXT1} 
			</if>
			<if test="params.EXT2 != null and params.EXT2 != ''">
				and EXT2 = #{params.EXT2} 
			</if>
			<if test="params.EXT3 != null and params.EXT3 != ''">
				and EXT3 = #{params.EXT3} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from ai_exec_product t
		<include refid="where" />
	</select>

	<select id="list" resultType="AiExecProduct">
		select * from ai_exec_product t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update ai_exec_product t
		<set>
			<if test="PRODUCT_CODE != null">
				PRODUCT_CODE = #{PRODUCTCODE}, 
			</if>
			<if test="AI_CODE != null">
				AI_CODE = #{AICODE}, 
			</if>
			<if test="PRODUCT_NAME != null">
				PRODUCT_NAME = #{PRODUCTNAME}, 
			</if>
			<if test="PRODUCT_DESC != null">
				PRODUCT_DESC = #{PRODUCTDESC}, 
			</if>
			<if test="PRODUCT_TYPE_ID != null">
				PRODUCT_TYPE_ID = #{PRODUCTTYPEID}, 
			</if>
			<if test="PRODUCT_ORI_PRICE != null">
				PRODUCT_ORI_PRICE = #{PRODUCTORIPRICE}, 
			</if>
			<if test="PRODUCT_STATUS != null">
				PRODUCT_STATUS = #{PRODUCTSTATUS}, 
			</if>
			<if test="PRODUCT_PIC_PATH != null">
				PRODUCT_PIC_PATH = #{PRODUCTPICPATH}, 
			</if>
			<if test="PRODUCT_URL != null">
				PRODUCT_URL = #{PRODUCTURL}, 
			</if>
			<if test="CREATOR != null">
				CREATOR = #{CREATOR}, 
			</if>
			<if test="CREATE_DATE != null">
				CREATE_DATE = #{CREATEDATE}, 
			</if>
			<if test="MODIFY_DATE != null">
				MODIFY_DATE = #{MODIFYDATE}, 
			</if>
			<if test="DATA_STATE != null">
				DATA_STATE = #{DATASTATE}, 
			</if>
			<if test="PRODUCT_SOURCE != null">
				PRODUCT_SOURCE = #{PRODUCTSOURCE}, 
			</if>
			<if test="EXT1 != null">
				EXT1 = #{EXT1}, 
			</if>
			<if test="EXT2 != null">
				EXT2 = #{EXT2}, 
			</if>
			<if test="EXT3 != null">
				EXT3 = #{EXT3}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
